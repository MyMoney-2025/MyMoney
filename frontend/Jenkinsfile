pipeline {
  agent any

  environment {
    NODE_ENV = 'production'
  }

  options {
    skipStagesAfterUnstable()
  }

  stages {
    stage('ğŸ“¥ Checkout Code') {
      steps {
        checkout scm
      }
    }

    stage('ğŸ“¦ Install Dependencies') {
      steps {
        dir('client') {
          sh 'npm ci'
        }
      }
    }

    stage('ğŸ›  Build Frontend') {
      steps {
        dir('client') {
          sh 'npm run build'
        }
      }
    }

    stage('ğŸ§ª Optional: Lint') {
      steps {
        dir('client') {
          sh 'npm run lint || true'  // Fehler blockieren Build nicht
        }
      }
    }

    stage('ğŸš€ Publish (optional)') {
      when {
        expression { return false } // Aktuell deaktiviert
      }
      steps {
        echo 'Deploying to production...'
        // z.â€¯B. scp, rsync, GitHub Pages, Firebase CLI, etc.
      }
    }
  }

  post {
    success {
      echo 'âœ… Build erfolgreich abgeschlossen!'
    }
    failure {
      echo 'âŒ Build fehlgeschlagen!'
    }
  }
}
